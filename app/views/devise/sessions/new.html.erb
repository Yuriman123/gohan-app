 <header class="jumbotron">
     <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Kiwi+Maru&display=swap" rel="stylesheet">

    <div class="titlefont">
      <h1 class="text-warning"> 今日は何食べる？</h1> 
      <% if current_user %> 
      <div class="text-white-75">こんにちは、 <%= current_user.nickname %>   さん
      <%end%>
        <p class="text-white-75  font-weight-light mb-5">毎日のレシピをシェアしよう</p>
         <%= link_to '投稿する', new_tweet_path, class:"sendcoler" %>
    </div>

 </header>  



<div class="titlefont">
<h3 class="texts-warning">ログイン</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="form-styl">
  <div class="field">
    <%= f.label :email（必須） %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
</div>

<div class="form-styl">
  <div class="field">
    <%= f.label :パスワード（必須） %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>
</div>


<br>
  <div class="actions">
      <%= f.submit "Log in", class:"buttonb" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>