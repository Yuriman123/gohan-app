<div class="titlefont">

<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="form-styl">
  <div class="field">
    <%= f.label :ニックネーム（必須） %><br />
    <%= f.text_area :nickname, autofocus: true, autocomplete: "nickname", placeholder: "例）山田" %>
  </div>
  </div>

<div class="form-styl">
  <div class="field">
    <%= f.label :email（必須） %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  </div>

<div class="form-styl">
  <div class="field">
    <%= f.label :password（必須） %>
    <% if @minimum_password_length %>
    <br>
    <em><%= @minimum_password_length %> 文字まで</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
</div>

  <div class="field">
    <%= f.label :password確認用（必須） %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
<div class="form-styl">
  <div class="actions">
  <br>
    <%= f.submit "新規登録",class:"buttona" %>
  </div>
</div>
<% end %>


<%= render "devise/shared/links" %>
</div>